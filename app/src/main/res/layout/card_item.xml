<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv_row"
    app:cardCornerRadius="15dp"
    android:elevation="3dp"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#1f1f1f"
    android:clickable="true"
    app:strokeColor="#757575"
    app:strokeWidth="1dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textColor="#e0e0e0"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:textColor="#e0e0e0"
            android:id="@+id/descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description this is a simple description "
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>